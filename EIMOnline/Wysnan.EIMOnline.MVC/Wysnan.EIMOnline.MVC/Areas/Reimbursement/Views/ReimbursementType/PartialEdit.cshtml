@using Wysnan.EIMOnline.MVC.Framework.Extensions;
@model Wysnan.EIMOnline.Common.Poco.ReimbursementType
<script src="/Scripts/ViewPage.js" type="text/javascript"></script>
<link href="/Content/ViewPage.css" rel="stylesheet" type="text/css" />
@using (Ajax.BeginForm(new AjaxOptions() { UpdateTargetId = "alert" }))
{
    @Html.ValidationSummary("", new { id = "div_error", style = "display:none" })
    <div class="div_title">
        <input type="submit" value="保存" class="button" />
        <input type="button" value="返回" class="button back" />
    </div>
    <div id="tabs">
        <div id="tabs-1">
            <table class="TableData">
                <tr>
                    <td>
                        @Html.LabelFor(a => a.Name)
                        <div>
                            @Html.TextBoxFor(a => a.Name)
                        </div>
                    </td>
                    <td>
                        @Html.LabelFor(a => a.Description)
                        <div>
                            @Html.TextAreaFor(a => a.Description)
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        <div id="tabs-2">
        </div>
    </div>
}